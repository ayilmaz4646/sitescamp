<%= simple_form_for @user, :url => nimbos.sessions_path, html: { class: "login-form" } do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :error_method => :to_sentence, class: "alert alert-danger" %>

  <h3 class="form-title">Login to your account</h3>
  <div class="form-group">
    <%= f.input :email, label: false, placeholder: t("web.placeholder.email") %>
  </div>
  <div class="form-group">
    <%= f.input :password, as: :password, label: false, placeholder: t("web.placeholder.password") %>
  </div>
  <div class="form-actions">
    <%= f.input :remember_me, as: :boolean, label: t("web.label.remember_me") %>
    <%= f.submit t("web.label.login"), :class => "btn green pull-right" %>
  </div>
<% end %>

  <div class="forget-password">
    <%= link_to t("web.label.forgot_password"), nimbos.new_password_reset_path %>
  </div>
  <div class="create-account">
    <p>
      <%= t("web.label.no_account_yet") %>&nbsp; 
      <%= link_to t("web.label.signup"), nimbos.new_user_path %>
    </p>
  </div>
