<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="featured-box featured-box-primary align-left mt-xlg">
      <div class="box-content">
        <h4 class="form-title">Login to your sitescamp account</h4>
        <%= simple_form_for @user, :url => nimbos.sessions_path, html: { class: 'form-horizontal' } do |f| %>
          <%= f.error_notification %>
          <%= f.error :base, :error_method => :to_sentence, class: "alert alert-danger" %>

            <div class="form-group">
              <%= f.input :email, label: "E-Mail" %>
            </div>
            <div class="form-group">
              <%= f.input :password, as: :password, label: "Password" %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
            </div>
            <div class="form-group">
              <%= f.submit "Login", class: "btn btn-primary pull-right mb-xl" %>
            </div>
          </div>
          <div class="create-account">
            <p>
              <span>
                <%= t("web.label.no_account_yet") %>&nbsp;<%= link_to t("web.label.signup"), nimbos.new_user_path %>
              </span>
              <span class="pull-right">
                <%= link_to t("web.label.forgot_password"), nimbos.new_password_reset_path %>
              </span>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>