<%= simple_form_for @user, :url => nimbos.sessions_path, html: { class: "login-form" } do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :error_method => :to_sentence, class: "alert alert-danger" %>
  <div class="col-sm-6">
    <div class="featured-box featured-box-secundary default info-content">
      <div class="box-content">
        <h3 class="form-title">Login to your account</h3>
        <form action="" id="" method="post">
          <div class="row">
            <div class="form-group">
              <%= f.input :email, label: "E-Mail" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <%= f.input :password, as: :password, label: "Password" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-actions">
                <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-actions">
                <%= f.submit "login", :class => "btn green pull-right" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="forget-password">
              <%= link_to t("web.label.forgot_password"), nimbos.new_password_reset_path %>
            </div>
          </div>
          <div class="create-account">
            <p>
              <%= t("web.label.no_account_yet") %>&nbsp; 
              <%= link_to t("web.label.signup"), nimbos.new_user_path %>
            </p>
          </div>
      </div>
    </div>
  </div>
<% end %>