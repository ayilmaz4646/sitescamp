<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="featured-box featured-box-primary align-left mt-xlg">
      <div class="box-content">
	    	<h4>Reset your password</h4>
			</div>
	  		<p>To reset your password, enter your Sitescamp account email</p>
			  <%= form_tag nimbos.password_resets_path, method: :post, class: "form-horizontal" do %>
			    <div class="control-group">
			      <%= label_tag :email, t("defaults.label.email"), class: "control-label" %>
			      <div class="controls">
			        <%= text_field_tag :email, params[:email] %>
			      </div>
			    </div>
			    <div class="form-actions"><%= submit_tag "Reset Password", class: "btn btn-success" %></div>
			  <% end %>
		</div>
	</div>
</div>